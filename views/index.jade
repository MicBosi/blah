extends layout

block content
    p 
        b(class="text-muted") #{username}
    p 
        div(style="display: inline-block; width: 519px;")
            textarea(id="message" rows="1" style="width: 100%; height: 34px;" placeholder="")
        a(href="#" class="btn btn-success pull-right channel-button" onclick="Blah.sendMessage(); return false;") 
            i(class="fa fa-paper-plane-o")
        div(style="clear:both;")
    p(id="messages")
